<launch>
  <include file = "$(find bitathome_navigation_control)/launch/navigation_configuration.launch" />
  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen" >
    <param name="map_resolution" value="0.5" />
    <param name="map_size" value="20" />
    <param name="map_start_x" value="0.05" />
    <param name="map_start_y" value="0.1" />
    <param name="pub_map_odom_transform" value="true" />
    <param name="map_frame" value="map" />
    <param name="base_frame" value="base_link" />
    <param name="odom_frame" value="base_link" />
    <param name="laser_frame" value="laser" />
  </node>
</launch>

